{
    "layer": "top",
    "position": "top",
    "height": 34,
    "margin-top": 0,
    "margin-bottom": 0,

	"modules-left": [
		"custom/home",
		"custom/sep",
		"hyprland/workspaces",
		"custom/sep",
		"hyprland/window"
	],
    "modules-center": [
		"clock",
	],
    "modules-right": [
		"cpu",
		"memory",
		"network",
        "pulseaudio",
        "custom/audio-switcher",
        "custom/power"
    ],

    /* ───────────── WORKSPACE HOME (alias do 11) ───────────── */
	"custom/home": {
		"format": "",
		"return-type": "json",
		"signal": 8,           
		"exec": "~/.config/waybar/scripts/workspacer.sh", 
		"interval": 1, // <-- Reativado para sincronização automática
		"on-click": "~/.config/hypr/scripts/toggle_special.sh",
		"tooltip": false
	},

	/* ───────────── WORKSPACES NUMÉRICOS ───────────── */
	"hyprland/workspaces": {
		"all-outputs": false,
		"active-only": false,
		"persistent-only": true,
		"persistent-workspaces": {
			"1": [], "2": [], "3": [], "4": [], "5": [],
			"6": [], "7": [], "8": [], "9": []
		}
	},

    /* ───────────── JANELA ATIVA ───────────── */
    "hyprland/window": {
        "format": "{title}",
        "max-length": 45,
        "separate-outputs": true
    },

    /* ───────────── SEPARADOR ───────────── */
    "custom/sep": {
        "format": "|",
        "tooltip": false
    },

    /* ───────────── REDE ───────────── */
    "network": {
        "format-wifi": "  {essid}",
        "format-ethernet": "",
        "format-disconnected": "  Offline"
    },

	/* ───────────── CPU ───────────── */
	"cpu": {
		"format": "󰘚 {usage: >3}%",
		"on-click": "pypr toggle btop"
	},
  // "temperature": {
  //   "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
  //   "critical-threshold": 80,
  //   "format": "  {temperatureC}°C",
  //   "on-click": "neohtop"
  // },
	/* ───────────── MEMÓRIA ───────────── */
	"memory": {
		"format": " {: >3}%",
		"on-click": "pypr toggle btop"
	},

	/* ───────────── ÁUDIO ───────────── */
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "  0%",
        "format-icons": {
            "default": ["", "", ""]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pypr toggle volume",
    },

    "custom/audio-switcher": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/audio_switcher.sh",
        "on-click": "~/.config/waybar/scripts/audio_switcher.sh switch",
        "interval": 1,
        "return-type": "json"
    },

    /* ───────────── RELÓGIO ───────────── */
    "clock": {
        "format": "  {:%a %d %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    /* ───────────── POWERMENU ───────────── */
    "custom/power": {
        "format": "",
        "on-click": "quickshell -p ~/.config/waybar/scripts/powermenu.qml",
        "tooltip": false
    }
}
